<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <jowney.com.common.widget.WidgetOvalButton
        android:id="@+id/click"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="230dp"
        hman:bt_corner_radius="5dp"
        hman:bt_ico="@drawable/ic_click"
        hman:bt_ico_marginLeft="30dp"
        hman:bt_stroke_color="#053E94"
        hman:bt_color="#6BA4FA"
        hman:bt_stroke_width="3dp"
        hman:bt_text="触摸模式"
        hman:bt_text_color="@color/colorPrimaryDark"
        hman:bt_text_marginRight="30dp"
        hman:bt_text_size="20sp" />

    <jowney.com.common.widget.WidgetOvalButton
        android:id="@+id/sound"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        hman:bt_color="#6BA4FA"
        hman:bt_stroke_color="#053E94"
        hman:bt_corner_radius="5dp"
        hman:bt_ico="@drawable/ic_sound"
        hman:bt_ico_marginLeft="30dp"
        hman:bt_stroke_width="3dp"
        hman:bt_text="语音模式"
        hman:bt_text_color="@color/colorPrimaryDark"
        hman:bt_text_marginRight="30dp"
        hman:bt_text_size="20sp" />
</LinearLayout>
